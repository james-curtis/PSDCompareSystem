<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.newcompare.mapper.OrderLogMapper">


    <select id="selectByIds" resultType="com.example.newcompare.entity.OrderLog">
        select *from order_log
        where
        <foreach collection="Ids" item="id" separator="or">
            id = #{id} and deleted=0
        </foreach>
    </select>

    <update id="orderDelete" parameterType="java.util.List">
        <trim prefix="update order_log">
            <trim prefix="set" suffixOverrides=",">
                <trim prefix="deleted =case" suffix="end,">
                    <foreach collection="orderLogs" item="orderLog" index="index">
                        <if test="orderLog.deleted !=1">
                            when id=#{orderLog.id} then 1
                        </if>
                    </foreach>
                </trim>
            </trim>
        </trim>
        <trim prefix="where">
            <foreach collection="orderLogs" item="orderLog" index="index" separator="or">
                id = #{orderLog.id}
            </foreach>
        </trim>
    </update>



    <select id="getByWorkCode" resultType="com.example.newcompare.entity.OrderLog">
        SELECT * FROM order_log WHERE task_id = (SELECT task_group.id FROM task_group WHERE work_code = #{workCode})
    </select>
</mapper>
