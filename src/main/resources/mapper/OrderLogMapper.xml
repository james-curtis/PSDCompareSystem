<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.newcompare.mapper.OrderLogMapper">

    <update id="allDelete">
        update order_log set order_log.deleted = 1
        where
        <foreach collection="Ids" item="id" separator="or">
            id = #{id}
        </foreach>
    </update>

    <select id="getFilecodeByTaskId" resultType="com.example.newcompare.entity.OrderLog">
        SELECT *
        FROM file LEFT JOIN order_log
        ON file.task_id = order_log.task_id
        WHERE file.task_id = #{taskId}
    </select>
</mapper>
